{
  "fields": [
    {
      "id": "shop_domain",
      "type": "string",
      "label": "Shopify Store Domain",
      "description": "e.g. mystore.myshopify.com",
      "validation": {
        "required": true
      }
    },
    {
      "id": "access_token",
      "type": "string",
      "label": "Access Token",
      "description": "Your Shopify Admin API access token",
      "validation": {
        "required": true
      },
      "ui_options": {
        "ui_widget": "password"
      }
    },
    {
      "id": "customer_email",
      "type": "string",
      "label": "Customer Email"
    },
    {
      "id": "line_items",
      "type": "string",
      "label": "Line Items JSON",
      "description": "Paste a JSON array of line items like: [{\"variant_id\": \"123\", \"quantity\": 2}]",
      "ui_options": {
        "ui_widget": "textarea",
        "placeholder": "[{\"variant_id\": \"51471050801441\", \"quantity\": 2}, {\"variant_id\": \"51471051555105\", \"quantity\": 1}]"
      },
      "validation": {
        "required": true
      }
    }
  ]
}
